int val;           // Variable to store raw ADC value
int temp = A0;     // Temperature sensor connected to analog pin A0
int Buzzer = 2;    // Buzzer connected to digital pin 2
void setup() {
  Serial.begin(9600);     // Start serial communication at 9600 bps
  pinMode(temp, INPUT);   // Set temp pin as input
  pinMode(Buzzer, OUTPUT);// Set buzzer pin as output
}
void loop() {
  val = analogRead(temp);                 // Read analog value (0–1023)
  float mv = (val / 1024.0) * 5000;      // Convert ADC value to millivolts (5V reference)
  float cal = mv / 10;                   // Convert mV to °C (LM35 outputs 10 mV/°C)
  if (cal > 50.0) {
    digitalWrite(Buzzer, HIGH);           // Turn buzzer ON if > 50°C
  } else {
    digitalWrite(Buzzer, LOW);            // Otherwise, turn buzzer OFF
  }
  Serial.print("Temperature in Celsius: ");
  Serial.println(cal);
  delay(1000);                            // Wait 1 second
  float farh = (cal * 9) / 5 + 32;        // Convert °C → °F
  Serial.print("Temperature in Fahrenheit: ");
  Serial.println(farh);
}
